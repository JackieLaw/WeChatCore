<Window x:Class="EasyWeChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyWeChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="600">
    <Grid>
        <Image x:Name="Image1"></Image>
        <TextBox x:Name="a1" Visibility="Collapsed" TextWrapping="WrapWithOverflow" IsReadOnly="True" Background="Black" Foreground="White" FontSize="14" TextChanged="a1_TextChanged" VerticalScrollBarVisibility="Auto"></TextBox>
    </Grid>
</Window>
